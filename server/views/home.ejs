   <script>
  // UUID generator
  function idget() {
    return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function (c) {
      const r = Math.random() * 16 | 0;
      const v = c === 'x' ? r : (r & 0x3 | 0x8);
      return v.toString(16);
    });
  }

  const reduid = idget();
  console.log("Generated ID:", reduid);

  // Navigation functions
  function navigateHome() {
    window.location.href = `/view/u/${encodeURIComponent(reduid)}`;
  }

  function navigateCharacters() {
    window.location.href = `/dis/u/${encodeURIComponent(reduid)}`;
  }

  function openNotifications() {
    window.location.href = `/notify/u/${encodeURIComponent(reduid)}`;
  }

  function plans() {
    window.location.href = `/plans/?id=${encodeURIComponent(localStorage.getItem('id'))}`;
  }

  function plans2() {
    window.location.href = `/dis/u/${encodeURIComponent(reduid)}`;
  }

  function postpop() {
    window.location.href = `/post/u/${encodeURIComponent(reduid)}`;
  }

  function mypost() {
    window.location.href = `/post/u/${encodeURIComponent(reduid)}#post`;
  }

  function closePostPopup() {
    document.getElementById('post-popup').classList.add('hidden');
  }

  function openSettings() {
    alert("Settings popup (implement as needed)");
  }

  function showLogoutPopup() {
    document.getElementById('logout-popup').classList.remove('hidden');
  }

  // Attach events after DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    // Desktop
    document.getElementById("desktop-home").addEventListener("click", e => { e.preventDefault(); navigateHome(); });
    document.getElementById("desktop-my-posts").addEventListener("click", e => { e.preventDefault(); mypost(); });
    document.getElementById("desktop-create-post").addEventListener("click", e => { e.preventDefault(); postpop(); });
    document.getElementById("desktop-notifications").addEventListener("click", e => { e.preventDefault(); openNotifications(); });
    document.getElementById("desktop-plans").addEventListener("click", e => { e.preventDefault(); plans(); });
    document.getElementById("desktop-plans2").addEventListener("click", e => { e.preventDefault(); plans2(); });

    // Mobile
    document.getElementById("nav-home").addEventListener("click", e => { e.preventDefault(); navigateHome(); });
    document.getElementById("mobile-create-post").addEventListener("click", e => { e.preventDefault(); postpop(); });
    document.getElementById("mobile-notifications").addEventListener("click", e => { e.preventDefault(); openNotifications(); });

    // Sidebar auto-show on desktop
    const sidebar = document.querySelector('.sidebar');
    if (window.innerWidth > 768) {
      sidebar.classList.remove('hidden');
      sidebar.style.display = 'flex';
    }

    // Mobile nav toggle
    document.getElementById('mobile-nav-toggle').addEventListener('click', () => {
      const mobileNav = document.getElementById('mobile-nav');
      mobileNav.classList.remove('hidden');
      mobileNav.classList.add('open');
    });

    document.getElementById('mobile-nav-close').addEventListener('click', () => {
      const mobileNav = document.getElementById('mobile-nav');
      mobileNav.classList.remove('open');
      mobileNav.classList.add('hidden');
    });
  });
</script>

 
