  <!-- Firebase and App Scripts -->
  <script src="https://www.gstatic.com/firebasejs/10.0.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/10.0.0/firebase-auth-compat.js"></script>
  <script src="/js/home.js"></script>
  <script src="/js/firebase.js"></script>
  <script>
    document.getElementById("ai-chat-btn").addEventListener("click", () => {
      document.getElementById("ai-chat-box").style.display = "flex";
    });
    document.getElementById("close-chat").addEventListener("click", () => {
      document.getElementById("ai-chat-box").style.display = "none";
    });
    document.getElementById("send-msg").addEventListener("click", sendMessage);
    document.getElementById("ai-input").addEventListener("keypress", (e) => {
      if (e.key === "Enter") sendMessage();
    });

    function sendMessage() {
      let input = document.getElementById("ai-input");
      let msg = input.value.trim();
      if (!msg) return;
      appendMessage("You", msg);
      input.value = "";
      fetch("/api/ask-ai", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ query: msg })
      })
        .then(res => res.json())
        .then(data => appendMessage("AI", data.reply))
        .catch(() => appendMessage("AI", "Error connecting to AI server."));
    }

    function appendMessage(sender, text) {
      let chat = document.getElementById("ai-chat-messages");
      let msgDiv = document.createElement("div");
      msgDiv.innerHTML = `<strong>${sender}:</strong> ${text}`;
      chat.appendChild(msgDiv);
      chat.scrollTop = chat.scrollHeight;
    }

    currentUser = {
      id: localStorage.getItem('id')
    };

    function navigateHome() {
      const id = currentUser.id;
      if (id && window.location.pathname !== `/view/u/${id}`) {
        window.location.href = `/view/u/${encodeURIComponent(id)}`;
      }
    }

    function navigateCharacters() {
      const id = currentUser.id;
      if (id && window.location.pathname !== `/dis/u/${id}`) {
        window.location.href = `/dis/u/${encodeURIComponent(id)}`;
      }
    }

    function openNotifications() {
      showSection('notifications');
    }

    function plans() {
      const id = currentUser.id;
      if (id && window.location.pathname !== `/plans/?id=${id}`) {
        window.location.href = `/plans/?id=${encodeURIComponent(id)}`;
      }
    }

    function plans2() {
      const id = currentUser.id;
      if (id && window.location.pathname !== `/dis/u/${id}`) {
        window.location.href = `/dis/u/${encodeURIComponent(id)}`;
      }
    }

    function postpop() {
      const id = currentUser.id;
      if (id && window.location.pathname !== `/post/u/${id}`) {
        window.location.href = `/post/u/${encodeURIComponent(id)}`;
      }
    }

    function closePostPopup() {
      document.getElementById('post-popup').classList.add('hidden');
    }
  </script>
