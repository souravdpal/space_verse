<!DOCTYPE html>
<html>
<head>
    <title>Create Your Character</title>
    <link rel="stylesheet" href="/css/make.css">
</head>
<body>
    <canvas id="particleCanvas"></canvas>
    <div class="container">
        <div class="header">
            <h1>Create Your Character</h1>
            <div class="header-actions">
                <button id="themeToggle" class="theme-toggle">üåô</button>
                <button id="fullscreenToggle" class="theme-toggle">üñ•Ô∏è</button>
            </div>
        </div>

        <form id="characterForm">
            <div class="form-group">
                <label for="charName">Character Name</label>
                <input type="text" id="charName" required>
            </div>

            <div class="form-group">
                <label for="charFirstLine">First Line</label>
                <textarea id="charFirstLine" required></textarea>
            </div>

            <div class="form-group">
                <label for="charBackground">Background</label>
                <textarea id="charBackground" required></textarea>
            </div>

            <div class="form-group">
                <label for="charBehavior">Behavior</label>
                <textarea id="charBehavior" required></textarea>
            </div>

            <div class="form-group">
                <label for="charRelationships">Tag story</label>
                <textarea id="charRelationships" required></textarea>
            </div>

            <div class="form-group">
                <label for="charTags">Tags (e.g., @hero, @villain) <span class="optional-label">(Optional)</span></label>
                <input type="text" id="charTags">
                <div id="tagSuggestions" class="tag-suggestions"></div>
            </div>

            <div class="form-group">
                <label>Image Selection <span class="optional-label">(Optional)</span></label>
                <div class="image-options">
                    <input type="text" id="imageLink" placeholder="Enter image URL">
                    <button type="button" id="createImage" class="btn btn-secondary">Create Image</button>
                    <input type="file" id="imageUpload" accept="image/*" style="display: none;">
                    <button type="button" id="uploadImage" class="btn btn-secondary">Upload Image</button>
                </div>
                <div id="imagePreview" class="image-preview"></div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save Character</button>
                <button type="button" id="resetForm" class="btn btn-secondary">Reset</button>
            </div>
        </form>
    </div>

    <script src="/js/make.js"></script>
</body>
</html>